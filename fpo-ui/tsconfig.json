{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": false,
    "jsx": "preserve",
    "moduleResolution": "node",
    "useDefineForClassFields": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "baseUrl": ".",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "types": ["node", "birdpaper-ui/global", "birdpaper-icon/global"],
    "paths": {
      "@/*": ["src/*"]
    }
  }
}
